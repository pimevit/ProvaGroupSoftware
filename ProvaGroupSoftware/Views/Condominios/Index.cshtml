@model IEnumerable<ProvaGroupSoftware.Models.Condominio>

@{
  ViewBag.Title = "Index";
}

<h2>Condomínio</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
  <p>
    Endereço: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
  </p>
}
  <table class="table">
    <tr>
      <th>
        @Html.ActionLink("Condominio", "Index", new { sortOrder = ViewBag.NomeSortParm })
      </th>
      <th>
        @Html.ActionLink("Endereço", "Index", new { sortOrder = ViewBag.EndSortParm })
      </th>
      <th></th>
    </tr>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Nome)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Endereco)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Cidade)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.UF)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Cep)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.UF)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Cep)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id = item.CondominioId }) |
          @Html.ActionLink("Details", "Details", new { id = item.CondominioId }) |
          @Html.ActionLink("Delete", "Delete", new { id = item.CondominioId })
        </td>
      </tr>
    }

  </table>
